# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-primary-key
COSMOS_DB_NAME=planor-portal

# Admin User Creation (for initial setup)
ADMIN_EMAIL=admin@planor.com
ADMIN_NAME=System Administrator
ADMIN_PASSWORD=admin123456

# Azure Storage Blob Configuration
# Option 1: Connection String (Recommended for production)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-account-key;EndpointSuffix=core.windows.net

# Option 2: Individual Account Details with SAS Token
AZURE_STORAGE_ACCOUNT_NAME=planorappfiles
AZURE_STORAGE_ACCOUNT_KEY=your-account-key
AZURE_STORAGE_SAS_TOKEN=sv=2024-11-04&st=2024-01-01T00:00:00Z&se=2024-12-31T23:59:59Z&sp=r&sip=0.0.0.0-255.255.255.255&spr=https&sr=b&sig=your-signature

# Option 3: SAS URL (for specific container access)
AZURE_STORAGE_SAS_URL=https://your-storage-account.blob.core.windows.net/your-container?sp=rl&st=2024-01-01T00:00:00Z&se=2024-12-31T23:59:59Z&spr=https&sv=2020-08-04&sr=c&sig=your-signature

# Azure Storage Container Names
AZURE_STORAGE_CONTAINER_NAME=planorobjectfiles
AZURE_STORAGE_PRICELIST_CONTAINER=pricelist-files

# Azure Storage Authentication Method
# Options: connection_string, account_key, sas_url, managed_identity
AZURE_STORAGE_AUTH_METHOD=connection_string

# Azure Storage Retry Configuration
AZURE_STORAGE_MAX_RETRIES=3
AZURE_STORAGE_RETRY_DELAY=1000

# Azure Storage Timeout Configuration (in milliseconds)
AZURE_STORAGE_REQUEST_TIMEOUT=30000
AZURE_STORAGE_OPERATION_TIMEOUT=60000

# Azure Storage Logging
AZURE_STORAGE_LOG_LEVEL=info
AZURE_STORAGE_ENABLE_LOGGING=true

# Azure Storage Security
AZURE_STORAGE_ENABLE_HTTPS=true
AZURE_STORAGE_ENABLE_ENCRYPTION=true

# Azure Storage Performance
AZURE_STORAGE_CONCURRENT_REQUESTS=10
AZURE_STORAGE_CHUNK_SIZE=4194304

# Azure Storage Monitoring
AZURE_STORAGE_ENABLE_METRICS=true
AZURE_STORAGE_ENABLE_ANALYTICS=true 